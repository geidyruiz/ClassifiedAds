<h1>Register</h1>

{{#if messages}}
<div class="alert alert-danger">{{messages}}</div>
{{else}}
<div class="alert alert-info">Your password must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters</div>
{{/if}}
<hr />
<form align="center" method="post">
    <fieldset class="form-group">
        <label for="username" class="col-sm-2 control-label"> Username: *</label>
        <input name="username" id="username" required />
    </fieldset>
    <fieldset class="form-group">
        <label for="password" class="col-sm-2 control-label"> Password: *</label>
        <input name="password" id="password" type="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
    </fieldset>
    <fieldset class="form-group">
        <label for="confirm" class="col-sm-2 control-label"> Confirm: *</label>
        <input name="confirm" id="confirm" type="password" required onkeyup="return comparePasswords()" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
        <span id="passWordMsg"></span>
    </fieldset>
    <fieldset class="form-group">
        <button class="btn btn-info offset-2" onclick="return comparePasswords()">Register</button>
        <hr />
        Do you already have an account?
        <br />
        <button><a style="color: #6b30c2" href="login" title="Login">Login</a></button>
    </fieldset>
</form>